{
  "name": "dahlia",
  "version": "1.8.0",
  "description": "An opinionated React Framework for building modern web applications.",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean:dist": "rimraf dist/*",
    "tsc": "npm run clean:dist && tsc",
    "min": "terser dist/index.js -o dist/index.min.js",
    "build": "npm run clean:dist && rollup -c && npm run min",
    "build:watch": "npm run clean:dist && rollup -c -w",
    "format": "prettier --write \"src/**/*.{js,ts,tsx}\"",
    "format:check": "prettier --list-different \"src/**/*.{js,ts,tsx}\"",
    "lint": "tslint -c tslint.json \"src/**/*.{ts,tsx}\"",
    "lint:fix": "tslint -c tslint.json \"src/**/*.{ts,tsx}\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/examples/",
      "/.history/"
    ]
  },
  "lint-staged": {
    "{src,__tests__}/**/*.{js,ts,tsx}": [
      "npm run format",
      "npm run lint:fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/forsigner/dahlia.git"
  },
  "author": "forsigner",
  "license": "MIT",
  "bugs": {
    "url": "https://.com/forsigner/dahlia/issues"
  },
  "homepage": "https://github.com/forsigner/dahlia#README",
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jest": "^23.3.2",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/react-test-renderer": "^16.0.3",
    "coveralls": "^3.0.2",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "react": "^16.7.0-alpha.2",
    "react-dom": "^16.6.3",
    "react-test-renderer": "16.7.0-alpha.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.64.1",
    "rollup-plugin-typescript2": "^0.17.0",
    "standard-version": "^4.4.0",
    "terser": "^3.8.2",
    "ts-jest": "^23.10.2",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3"
  },
  "peerDependencies": {
    "react": "16.7.0-alpha.0",
    "react-dom": "16.7.0-alpha.0"
  },
  "dependencies": {
    "corolla": "^1.1.0",
    "gery": "^1.1.3",
    "gql-tag": "^1.0.1",
    "request-hooks": "^1.2.0",
    "stamen": "^1.7.0"
  }
}
